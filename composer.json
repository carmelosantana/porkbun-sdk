{
    "name": "carmelosantana/porkbun-sdk",
    "description": "A PHP library for interacting with the Porkbun API.",
    "version": "1.0.0",
    "keywords": [
        "porkbun",
        "php"
    ],
    "type": "library",
    "authors" : [
        {
            "name" : "Carmelo Santana",
            "email" : "me@carmelosantana.com",
            "homepage" : "https://carmelosantana.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "pestphp/pest": "^2.35"
    },
    "autoload": {
        "psr-4": {
            "PorkbunSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PorkbunSdkTests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest tests/"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
